<% layout("/layouts/boilerplate")%>
<body>
    <h1>Edit listing</h1>    <br>    <br>    <br>
    <form action="/listings/<%= listing._id%>?_method=PUT " method="POST">
        <div class="mb-3">    <label for="title" class="form-label">Title:</label>
        <input type="text"  class="form-control"  value="<%= listing.title%>" id="title" name="listing[title]"></div>
<div class="mb-3"> <label  class="form-label" for="description">description</label>
       <textarea name="listing[description]" class="form-control"  id="descrtiption" ><%= listing.description%></textarea></div>
    
   <div class="mb-3"><label  class="form-label" for="price">Price:</label>
        <input type="text"   class="form-control" value="<%= listing.price%>" id="price" name="listing[price]" type="number"></div>
    
<div class="mb-3"><label for="image" class="form-label">Image</label>
        <input type="text" class="form-control"  value="<%= listing.image%>" id="image" name="listing[image]"></div>

  <div class="mb-3"> <label class="form-label" for="location">location</label>
        <input type="text" class="form-control value="<%= listing.location%>" id="location" name="listing[location]"></div>
   
    <div class="mb-3"> <label class="form-label"  for="country">country</label>
        <input type="text" class="form-control"   value="<%= listing.country%>" id="country" name="listing[country]"></div>
    
 
<button class="btn btn-danger" type="submit">Edit</button></form>
</body>
