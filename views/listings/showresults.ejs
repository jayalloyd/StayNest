<% layout("layouts/boilerplate") %>
<%- success %> 
<h3>Search Results for <%= searchedCountry %></h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing">
            <div class="card col listing-card-show">
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="card-img-top shadow" style="height:20rem;" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b></p>
                    <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                </div>
            </div>
        </a>
    <% } %>
</div>